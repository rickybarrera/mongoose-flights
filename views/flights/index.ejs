<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Mongoose Flights</title>
</head>
<body>
    <nav>
        <a href="/flights/new" <%- title === 'Add Flight' ? 'class="active"' : '' %>>ADD FLIGHT</a>
        <a href="/flights" <%- title === 'All Flights' ? 'class="active"' : '' %>>ALL FLIGHTS</a>
    </nav>
  <h1>Flight List</h1>
  <table>
    <thead>
      <tr>
        <th>Flight #</th>
        <th>Departure</th>
        <th>Airline</th>
        <th>Airport</th>
         <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <!-- Write the line of EJS to iterate over movies using forEach -->
      <% flights.forEach(function(f) { %>
        <tr>
          <td><%= f.flightNo %></td>
          <td><%= f.departs %></td>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
        </tr>
      <!-- Close the forEach using EJS here -->
    <% }) %>
    </tbody>
  </table>
</body>
</html>